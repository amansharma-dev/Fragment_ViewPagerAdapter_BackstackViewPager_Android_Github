<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemFragment">

    <TextView
        android:id="@+id/sticker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sticker Name"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"/>


    <ImageView
        android:id="@+id/sticker_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        tools:src="@drawable/img_five"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/sticker_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sticker Description"
        android:textSize="20sp"
        android:layout_above="@id/layout_price_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        />

    <LinearLayout
        android:id="@+id/layout_price_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_attach_money_black_24dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/sticker_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="4.9"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>